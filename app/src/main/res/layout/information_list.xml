<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_window">

    <ListView
        android:id="@+id/information_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_window"
        />

    <ImageView
        android:id="@+id/information_list_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/listView_top_bottom_padding"
        android:layout_marginTop="@dimen/listView_top_bottom_padding"
        android:src="@drawable/close_selector"
        android:contentDescription="@string/close" />

</RelativeLayout>
