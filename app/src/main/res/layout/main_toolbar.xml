<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar_bg">

    <TextView
        android:id="@+id/main_toolbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/main_title"
        android:textColor="@color/title_color"
        android:textSize="@dimen/title_size"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/main_toolbar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/main_toolbar_text"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/setting"
        android:paddingEnd="10dp"
        android:src="@drawable/setting_selector"
        tools:ignore="RtlSymmetry" />
    <!--android:background="@color/setting_selector"-->
    <!--android:clickable="true"-->

    <!--<Button-->
    <!--android:id="@+id/mainButton"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="@string/main_actionbar_button"-->
    <!--android:layout_alignBottom="@id/mainText"-->
    <!--android:layout_alignParentLeft="true"/>-->

    <ImageView
        android:id="@+id/main_icon_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/main_toolbar_text"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/setting"
        android:src="@drawable/icon_information"
        tools:ignore="RtlSymmetry"
        />

</RelativeLayout>
